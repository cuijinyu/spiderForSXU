<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <!--<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />-->
    <link href="stylesheets/bootstrap.min.css" rel="stylesheet" />

    <link href="stylesheets/login-register.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">

    <script src="javascripts/jquery-3.2.1.min.js" type="text/javascript"></script>
    <script src="javascripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="javascripts/login-register.js" type="text/javascript"></script>

</head>
<body>
<!--<form action="getscore" method="post">
    学号<input type="text" name="id"><br>
    密码<input type="text" name="password"><br>
    验证码<input type="text" name="checkNumber" onclick="getCheckPicture()"><br>
    <input type="submit" value="提交">-->




    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">
                    博雅成绩查询助手
                </a>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">公告栏</div>
                    <div class="panel-body boxbody">
                        没有什么好说的哦
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4"></div>
            <div class="col-xs-4">
                <a class="btn big-login" data-toggle="modal" href="javascript:void(0)" onclick="openLoginModal();">查询我的成绩</a>
                <!--<a class="btn big-register" data-toggle="modal" href="javascript:void(0)" onclick="openRegisterModal();">Register</a></div>-->
                <div class="col-xs-4"></div>
            </div>


            <div class="modal fade login" id="loginModal">
                <div class="modal-dialog login animated">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">查询我的成绩</h4>
                        </div>
                        <div class="modal-body">
                            <div class="box">
                                <div class="content">
                                    <div class="division">
                                        <div class="line l"></div>
                                        <div class="line r"></div>
                                    </div>
                                    <div class="error"></div>
                                    <div class="form loginBox">
                                        <form method="post" action="/getscore" accept-charset="UTF-8" id="getscore">
                                            <input id="studentId" class="form-control" type="text" placeholder="学号" name="id">
                                            <input id="password" class="form-control" type="password" placeholder="密码" name="password">
                                            <input id="check" class="form-control" type="text" placeholder="验证码" name="checkNumber">
                                            <img src="images/checkNumber.png" alt="点我获取验证码">
                                            <input class="btn btn-default btn-login" type="submit" value="查询成绩">
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="box">
                                <div class="content registerBox" style="display:none;">
                                    <div class="form">
                                        <form method="post" html="{:multipart=>true}" data-remote="true" action="/register" accept-charset="UTF-8">
                                            <input id="email" class="form-control" type="text" placeholder="Email" name="email">
                                            <input id="password" class="form-control" type="password" placeholder="Password" name="password">
                                            <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation">
                                            <input class="btn btn-default btn-register" type="submit" value="Create account" name="commit">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="forgot login-footer">
                            <span>有疑问
                                 <a href="http://cuijinyu.github.io">联系我</a>
                            </span>
                            </div>
                            <div class="forgot register-footer" style="display:none">
                                <span>Already have an account?</span>
                                <a href="javascript: showLoginForm();">Login</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
</body>